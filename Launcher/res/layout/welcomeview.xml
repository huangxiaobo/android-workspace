<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonStartEngine"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="onStartEngine"
        android:text="@string/welcomeview_start_engine" />

    <Button
        android:id="@+id/ButtonRsyncAll"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="onRsyncAll"
        android:text="@string/welcomeview_rsync_all" />

    <Button
        android:id="@+id/buttonRsyncScript"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="onRsyncScript"
        android:text="@string/welcomeview_rsync_script" />

    <TextView
        android:id="@+id/labelConnectServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/labelUpdateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>