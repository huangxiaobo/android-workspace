<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>crawler-fetcher</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <!-- 指定该Main Class为全局的唯一入口 -->
          <layout>ZIP</layout>
          <mainClass>com.huangxiaobo.crawler.fetcher.CrawlerFetcherApplication</mainClass>
          <skip>true</skip>
        </configuration>
        <executions>
          <execution>
            <configuration>
              <classifier>exec</classifier>
            </configuration>
            <goals>
              <goal>repackage</goal>
            </goals>
          </execution>
        </executions>
        <groupId>org.springframework.boot</groupId>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <artifactId>crawler-common</artifactId>
      <groupId>com.huangxiaobo</groupId>
      <version>0.0.1-SNAPSHOT</version>
    </dependency>


  </dependencies>
  <description>Demo project for Spring Boot</description>
  <groupId>com.huangxiaobo</groupId>
  <modelVersion>4.0.0</modelVersion>
  <name>crawler-fetcher</name>
  <packaging>jar</packaging>

  <parent>
    <artifactId>crawler</artifactId>
    <groupId>com.huangxiaobo</groupId>
    <relativePath>../pom.xml</relativePath>
    <version>0.0.1-SNAPSHOT</version> <!-- lookup parent from repository -->
  </parent>


  <properties>
    <java.version>1.8</java.version>
  </properties>

  <version>0.0.1-SNAPSHOT</version>

</project>
